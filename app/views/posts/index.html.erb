
 <h1>Feed</h1>

  <% @posts.reverse.in_groups_of(3).each_with_index do |row, i|  %>

    <div class="row mb-3">
      <div class="col-md-4">
      <h4><%= link_to(row[0].user.name, user_path(row[0].user.id))%></h4><p> <%=time_ago_in_words row[0].created_at %> ago</p>
        <%= row[0].audio.html_safe %>
      <p><%= link_to(row[0].caption, post_path(row[0])) %></p>
      </div>

      <% if row[1] %>
      <div class="col-md-4">
      <h4><%= link_to(row[1].user.name, user_path(row[1].user.id))%></h4><p> <%=time_ago_in_words row[1].created_at %> ago</p>
        <%= row[1].audio.html_safe %>
      <p><%= link_to(row[1].caption, post_path(row[1])) %></p>
      </div>
      <% end %>

      <% if row[2] %>
      <div class="col-md-4">
      <h4><%= link_to(row[2].user.name, user_path(row[2].user.id))%></h4><p> <%=time_ago_in_words row[2].created_at %> ago</p>
      <%= row[2].audio.html_safe %>
      <p><%= link_to(row[2].caption, post_path(row[2])) %></p>
      </div>
      <% end %>

    </div>
  <% end %>


